def mqtt_host = '10.14.204.3'
def topic_out = 'ttgw/deadman_test'

|value_emitter()
.every(5s)
.type(point)

|deadman()
.timeout(3s)
%.quiet_time(10s)
%.fields('question', 'answer')
%.field_values('what', 'that')
%.repeat_last()

|debug()

|mqtt_publish()
.host(mqtt_host)
.topic(topic_out)

%|log()
%.file('deadman.txt')